<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <%= render :partial => "meal", :locals =>
  { :@meal => meal } %>
    <%= image_tag meal.image.url(:medium) %>
    <br>
    <br>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path %> |
<%= link_to 'Back', index_path_path %>
