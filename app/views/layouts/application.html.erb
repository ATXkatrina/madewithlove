<!DOCTYPE html>
<html>
  <head>
    <title>madewithlove</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Make sure all content is inside a Bootstrap container div -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-heart"></span> madewithlove</a>
        <div class="navbar-text navbar-right">
          <% if current_user %>
            <a data-toggle="popover" id="profile" href="/users/<%= current_user.id %>" class="navbar-link">
              <img class="navbar-avatar pull-right" src="<%= current_user.avatar %>" alt="<%= current_user.first_name %>">
            </a>
          <% else %>
            <a href="/login">Login</a>
            <a href="/register">Sign Up</a>
          <% end %>
        </div>

        <% if current_user %>
          <div id="profile-popover" class="hidden">
            <%= link_to "Edit Profile", edit_user_path(current_user) %>
            <a href="/logout">Logout</a>
          </div>
        <% end %>
      </div>
    </nav>
    <div class="container main">
      <%= yield %>
    </div>
    <hr>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <span>Â© madewithlove, Inc.</span>
          <span class="pull-right social">
            <a href="#"><i class="fa fa-instagram"></i></a>
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
          </span>
        </div>
      </div>
    </div>
  </body>
</html>
