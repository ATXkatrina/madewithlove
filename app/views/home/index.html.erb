<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Welcome</h2>
      <%= link_to 'View all meals', meals_path %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_tag "/meals/search", method: "get", class: 'form-inline' do %>
        <div class="form-group form-group-lg">
          <%= label_tag(:query, "Search for meals:", class: "sr-only") %>
          <%= text_field_tag :query, "",placeholder: "Search for meals", class: "form-control" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-danger btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>





<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Featured Meals</h3>
      <!-- Perhaps add featured meals here -->
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_tag("/meals/category", method: "get") do %>
        <div class="form-group">
          <%= label_tag(:category, "Select a category:") %>
          <%= select_tag(:category, "<option>Americana</option><option>Chinese</option><option>Indian</option><option>Italian</option><option>Mexican</option><option>Thai</option>".html_safe) %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
