  <div class="row">

    <div class="col-md-5">
      <div class="row meal-listing">
        <% @meals.each do |meal| %>
          <div class="col-md-4 single-meal">
            <%= render :partial => "meal", :locals => { :layout => false , :@meal => meal } %>
            <% if @meal.seed_image %>
              <img class="img-responsive" src="<%= @meal.seed_image %>" alt="Meal Picture">
            <% else %>
              <%= image_tag meal.image.url(:medium) %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Maps goes here -->
    <div id="map" class="col-md-6">

    </div>

  </div>
