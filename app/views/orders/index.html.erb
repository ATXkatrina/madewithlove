<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <h2>Orders</h2>

      <table>
        <thead>
          <tr>
            <th>Patron</th>
            <th>Meal</th>
            <th>Quantity</th>
            <th>Total price</th>
            <th>Destination address</th>
            <th>Delivery time</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.patron_id %></td>
              <td><%= order.meal_id %></td>
              <td><%= order.quantity %></td>
              <td><%= order.total_price %></td>
              <td><%= order.destination_address %></td>
              <td><%= order.delivery_time %></td>
              <td><%= link_to 'Show', class: "btn btn-info", order %></td>
              <td><%= link_to 'Edit',class: "btn btn-warning" , edit_order_path(order) %></td>
              <td><%= link_to 'Destroy', order, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Order', new_order_path %>
    </div>
  </div>
</div>
