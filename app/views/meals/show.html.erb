<p id="notice"><%= notice %></p>
<% if @meal.seed_image %>
  <img class="show_img" src="<%= @meal.seed_image %>" alt="Meal Picture">
<% else %>
  <%= image_tag @meal.image.url(:large) %>
<% end %>

<%= render :partial => "meal" %>

<% if current_user %>
  <hr>
  <%= render :partial => "/orders/form", :locals => { :order => @order } %>
<% end %>

<%= link_to 'Back', meals_path %>

