<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <% if @meal.seed_image %>
        <img class="show_img" src="<%= @meal.seed_image %>" alt="Meal Picture">
      <% else %>
        <%= image_tag @meal.image.url(:large) %>
      <% end %>

      <%= render :partial => "meal" %>
      <hr>
      <form>
        <div class="form-group">
          <label>Hello</label>
          <input></input>
        </div>
      </form>
      <% if current_user %>
        <hr>
        <%= render :partial => "/orders/form", :locals => { :order => @order, :meal => @meal } %>
      <% end %>

      <%= link_to 'Back', meals_path %>
    </div>
  </div>
</div>

