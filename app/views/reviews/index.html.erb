<div class="container">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <h3>Reviews</h3>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">
        <table>
          <thead>
            <tr>
              <th>Comment</th>
              <th>Rating</th>
              <th>Order</th>
              <th>Chef</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.comment %></td>
                <td><%= review.rating %></td>
                <td><%= review.order.meal.name %></td>
                <td><%= review.order.meal.chef.first_name %></td>
                <td><%= link_to 'Show', class: "btn btn-info", review %></td>
                <td><%= link_to 'Edit',class: "btn btn-warning",  edit_review_path(review) %></td>
                <td><%= link_to 'Destroy', class: "btn btn-danger" , review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
