<div class="row">
  <div class="col-md-12">
    <h3>Edit Profile</h3>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="field">

      <%= form_for(current_user) do |f| %>
        <% if current_user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
            <% current_user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <% if current_user.chef_avatar %>
          <img class="img-responsive avatar" src="<%= @user.chef_avatar %>" alt="Profile Picture">
        <% else %>
          <img class="img-responsive avatar" src="<%= current_user.avatar %>" alt="Profile Picture">
        <% end %>
        <div class="field">
          <%= f.label :change_profile_image %>
          <%= f.file_field :chef_avatar %>
        </div>
        <div class="field">
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :bio %>
          <%= f.text_area :bio %>
        </div>
        <div class="field">
          <%= f.label :street_address %>
          <%= f.text_field :street_address %>
        </div>
        <div class="field">
          <%= f.label :zip_code %>
          <%= f.text_field :zip_code %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
